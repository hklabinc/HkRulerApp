<!-- panel_settings.xml (Optimized 20% panel version) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panelRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp"
    android:layout_marginTop="1dp"
    android:background="#A0000000">  <!-- 투명도 약간 낮춰서 Preview 대비 개선 -->

    <!-- Focus Mode -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Focus"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp" />

        <RadioGroup
            android:id="@+id/radioGroupFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioFocusMulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:checked="true"
                android:layout_marginEnd="1dp" />

            <RadioButton
                android:id="@+id/radioFocusCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center"
                android:textColor="@android:color/white"
                android:textSize="9sp" />
        </RadioGroup>
    </LinearLayout>

    <!-- EV -->
    <LinearLayout
        android:id="@+id/rowEv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EV"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:layout_gravity="center_vertical" />

        <SeekBar
            android:id="@+id/seekEv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/txtEvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="0"
            android:textSize="9sp" />
    </LinearLayout>

    <!-- Align Assist -->
    <CheckBox
        android:id="@+id/switchAlignAssist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Align Assist"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        android:layout_marginTop="1dp" />

    <!-- Aspect -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <RadioButton
            android:id="@+id/radioAspect16x9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:9"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:checked="true"
            android:layout_marginEnd="6dp" />

        <RadioButton
            android:id="@+id/radioAspect4x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:3"
            android:textColor="@android:color/white"
            android:textSize="9sp" />
    </RadioGroup>

</LinearLayout>
