<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ✅ 패키지 가시성: 삼성 카메라/전체 카메라 UI 조회 -->
    <queries>
        <package android:name="com.sec.android.app.camera"/>
        <intent>
            <action android:name="android.media.action.STILL_IMAGE_CAMERA"/>
        </intent>
    </queries>

    <!-- 권한 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera.any"/>
    <!-- FGS 권한(타입) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>
    <!-- 알림(Heads‑up) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <!-- MediaStore 이미지 읽기 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <!-- Android 10~12 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <!-- Android 9 이하 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>

    <application
        android:name=".HkRulerApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <activity
            android:name=".ResolutionInfoActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- FileProvider (시스템 카메라 EXTRA_OUTPUT 용) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <!-- ✅ Foreground Service: 촬영 감지/복귀 -->
        <service
            android:name=".AutoReturnService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- ✅ 접근성 서비스: HOME→앱 복귀(프로 모드 유지) -->
        <service
            android:name=".access.AutoReturnAccessService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/auto_return_accessibility_config"/>
        </service>

        <activity
            android:name=".PhoneDisplayProxyActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:taskAffinity=""
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />

    </application>
</manifest>
